#elseif($node.type == "Datastore" && ($node.optype == "FileInput" || $node.optype == "XMLInput" || $node.optype == "ExcelInput"))
	<ioSpecification>
      <dataInput id="_$node.id" isCollection="false" name="$node.name"/>
      <inputSet>
        <dataInputRefs>_$node.id</dataInputRefs>
      </inputSet>
      <outputSet/>
    </ioSpecification>
	
#elseif($node.type == "Datastore" && ($node.optype == "FileOutput" || $node.optype == "XMLOutput" || $node.optype == "ExcelOutput"))
	 <ioSpecification>
      <dataOutput id="_$node.id" isCollection="false" name="$node.name"/>
      <inputSet/>
      <outputSet>
        <dataOutputRefs>_$node.id</dataOutputRefs>
      </outputSet>
    </ioSpecification>
*#
